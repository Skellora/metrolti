<html>
  <head>
    <script type="text/javascript" src="/static/Shader.js"></script>
    <script type="text/javascript" src="/static/sylvester.js"></script>
    <script type="text/javascript" src="/static/glUtils.js"></script>
    <script type="text/javascript" src="/static/metro.js"></script>
    <script>
      window.onerror = function(m, _, line) {
        alert(m + ":" + line);
        return true;
      };
      function clicky() {
        let statusEl = document.getElementById('status');
        let lobbyEl = document.getElementById('count');
        let canvasEl = document.getElementById('game-canvas');
        metro.setup('ws://{{ websocket }}', statusEl, lobbyEl, canvasEl);
        metro.start();
      }
    </script>
  </head>
  <body>
    <h2>{{ test }}</h2>
    <div id='status'>?</div>
    <canvas id='game-canvas' width='510' height='667' style="display:none"> </canvas>
    <b>Lobby: </b>
    <span id='count'>?</span>
    <button onclick="clicky('works');">Button</button>
  </body>
</html>
